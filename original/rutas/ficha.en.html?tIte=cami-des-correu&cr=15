		<script type="text/javascript">
	    //<![CDATA[
	    
	       //comprueba si el léxico del correo es correcto
		   	function isMail(mail){
		       	//var reg_exp = '\b[A-Z0-9._%+-]+@[A-Z0-9.-]+\.[A-Z]{2,4}\b';
				reg_exp = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
			   	return reg_exp.test(mail);
		   	}
               
	       	function comprobarCampos(){
	           
	           	//mensaje de error
               	var arrMensaje = [];
               
	           	var objForm = document.getElementById('formularioPostal');
	           
				if ( objForm.nomDestinatario.value == '' ){
					arrMensaje.push({msg:'You must fill in the recipient’s name',focus:'nomDestinatario'});
	           	}
	           	
	           	if ( objForm.emailDestinatario.value == '' ){
	           		arrMensaje.push({msg:'You must enter a valid recipient’s address',focus:'emailDestinatario'});	
	           	}else if ( !isMail(objForm.emailDestinatario.value) ){
	               	arrMensaje.push({msg:'You must enter a valid recipient’s address',focus:'emailDestinatario'});	
	           	}
	           
	           	if ( objForm.nomRemitente.value == '' ){
	           		arrMensaje.push({msg:'You must fill in the sender’s name',focus:'nomRemitente'});
	           	}
	           
	           	if ( objForm.emailRemitente.value == '' ){
	            	arrMensaje.push({msg:'You must enter a valid sender’s address',focus:'emailRemitente'});	
	           	}else if ( !isMail(objForm.emailRemitente.value) ){
	            	arrMensaje.push({msg:'You must enter a valid sender’s address',focus:'emailRemitente'});	
	           	}
	           
	           	if ( objForm.mensajePostal.value == '' ){
	           		arrMensaje.push({msg:'You must fill in the message field',focus:'mensajePostal'});	
	           	}
	           
	           	if ( arrMensaje.length>0 ){
	           		
	           		var arrAux = [];
	           		for (var i=0;i<arrMensaje.length;i++){
	           			arrAux.push(arrMensaje[i].msg);
	           		}
	           		alert(arrAux.join("\n"));
					document.getElementById(arrMensaje[0].focus).focus();	           			
	           		
					return false;
	               
	           	}else{
	           		
	            	return true;
	            	
	           	}
	           
	       	}
	       
	       	function limpiarDatos(){
	        	document.getElementById('formularioPostal').reset();
	       	}
			
			function fillFields(idObject, localeStr){
				var tmpIdObj = '#' + idObject;
                jQuery(tmpIdObj).focus(function(){
                    if (this.value == localeStr){
                       this.value = '';
                    }
                });
                jQuery(tmpIdObj).blur(function(){
                    if (this.value == ''){
                        this.value = localeStr;
                    }
                });				
			}
			
    		jQuery(document).ready(function(){
				fillFields('nomDestinatario', 'Recipient name');
				fillFields('emailDestinatario', 'E-mail address');
				fillFields('nomRemitente', 'Sender name');
				fillFields('emailRemitente', 'E-mail address');
			});
			
			
	    
